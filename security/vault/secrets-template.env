# ============================================================================
# VERTIFLOW - Template de Secrets Sécurisés
# ============================================================================
# ATTENTION: Ne jamais committer ce fichier avec des vraies valeurs!
# Utilisez un gestionnaire de secrets (HashiCorp Vault, AWS Secrets Manager, etc.)
# ============================================================================

# =============================================================================
# DATABASE CREDENTIALS
# =============================================================================

# ClickHouse
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_USER=vertiflow_admin
CLICKHOUSE_PASSWORD=<GENERATE_STRONG_PASSWORD_32_CHARS>
CLICKHOUSE_DATABASE=vertiflow

# MongoDB
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_ROOT_USER=vertiflow_root
MONGODB_ROOT_PASSWORD=<GENERATE_STRONG_PASSWORD_32_CHARS>
MONGODB_DATABASE=vertiflow
MONGODB_APP_USER=vertiflow_app
MONGODB_APP_PASSWORD=<GENERATE_STRONG_PASSWORD_32_CHARS>

# =============================================================================
# MESSAGE BROKER CREDENTIALS
# =============================================================================

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_SASL_USERNAME=vertiflow_producer
KAFKA_SASL_PASSWORD=<GENERATE_STRONG_PASSWORD_32_CHARS>
KAFKA_CONSUMER_USERNAME=vertiflow_consumer
KAFKA_CONSUMER_PASSWORD=<GENERATE_STRONG_PASSWORD_32_CHARS>

# MQTT (Mosquitto)
MQTT_HOST=mosquitto
MQTT_PORT=8883
MQTT_TLS_PORT=8883
MQTT_USERNAME=vertiflow_iot
MQTT_PASSWORD=<GENERATE_STRONG_PASSWORD_32_CHARS>
MQTT_ADMIN_USERNAME=vertiflow_admin
MQTT_ADMIN_PASSWORD=<GENERATE_STRONG_PASSWORD_32_CHARS>

# =============================================================================
# APPLICATION CREDENTIALS
# =============================================================================

# NiFi
NIFI_USERNAME=admin
NIFI_PASSWORD=<GENERATE_STRONG_PASSWORD_16_CHARS_MIN>
NIFI_SENSITIVE_PROPS_KEY=<GENERATE_RANDOM_KEY_32_CHARS>

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# NASA POWER API
NASA_POWER_API_KEY=<YOUR_NASA_API_KEY>

# OpenWeather API
OPENWEATHER_API_KEY=<YOUR_OPENWEATHER_API_KEY>

# Electricity Maps API
ELECTRICITY_MAPS_API_KEY=<YOUR_ELECTRICITY_MAPS_API_KEY>

# RTE ECO2MIX OAuth2
RTE_CLIENT_ID=<YOUR_RTE_CLIENT_ID>
RTE_CLIENT_SECRET=<YOUR_RTE_CLIENT_SECRET>

# =============================================================================
# TLS/SSL CERTIFICATES
# =============================================================================

# Paths to certificates (relative to project root)
CA_CERT_PATH=/security/certs/ca.crt
KAFKA_KEYSTORE_PATH=/security/certs/kafka.keystore.jks
KAFKA_TRUSTSTORE_PATH=/security/certs/kafka.truststore.jks
KAFKA_KEYSTORE_PASSWORD=<KEYSTORE_PASSWORD>
MQTT_CA_CERT=/security/certs/ca.crt
MQTT_SERVER_CERT=/security/certs/mosquitto.crt
MQTT_SERVER_KEY=/security/certs/mosquitto.key

# =============================================================================
# MONITORING CREDENTIALS
# =============================================================================

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=<GENERATE_STRONG_PASSWORD_16_CHARS>

# Prometheus (if basic auth enabled)
PROMETHEUS_USERNAME=prometheus
PROMETHEUS_PASSWORD=<GENERATE_STRONG_PASSWORD_16_CHARS>

# =============================================================================
# MLFLOW TRACKING
# =============================================================================

MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_S3_ENDPOINT_URL=http://minio:9000
MLFLOW_ARTIFACT_ROOT=s3://mlflow-artifacts
AWS_ACCESS_KEY_ID=<MINIO_ACCESS_KEY>
AWS_SECRET_ACCESS_KEY=<MINIO_SECRET_KEY>

# =============================================================================
# ENCRYPTION KEYS
# =============================================================================

# Data encryption at rest
DATA_ENCRYPTION_KEY=<GENERATE_256_BIT_KEY_BASE64>

# JWT signing (if API authentication used)
JWT_SECRET_KEY=<GENERATE_RANDOM_KEY_64_CHARS>
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# BACKUP ENCRYPTION
# =============================================================================

BACKUP_ENCRYPTION_PASSWORD=<GENERATE_STRONG_PASSWORD_32_CHARS>
BACKUP_S3_BUCKET=vertiflow-backups
BACKUP_S3_ACCESS_KEY=<BACKUP_S3_ACCESS_KEY>
BACKUP_S3_SECRET_KEY=<BACKUP_S3_SECRET_KEY>
