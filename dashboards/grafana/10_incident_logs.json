\": {\"$regexMatch\": {\"input\": \"$metadata.parameter_issue\", \"regex\": \"EC\"}}, \"then\": \"$data.nutrient_solution_ec\"}, {\"case\": {\"$regexMatch\": {\"input\": \"$metadata.parameter_issue\", \"regex\": \"Température\"}}, \"then\": \"$data.air_temp_internal\"}, {\"case\": {\"$regexMatch\": {\"input\": \"$metadata.parameter_issue\", \"regex\": \"Humidité\"}}, \"then\": \"$data.air_humidity\"}], \"default\": 0}}, {\"$toDouble\": {\"$switch\": {\"branches\": [{\"case\": {\"$regexMatch\": {\"input\": \"$metadata.parameter_issue\", \"regex\": \"pH\"}}, \"then\": \"$data.ph_target\"}, {\"case\": {\"$regexMatch\": {\"input\": \"$metadata.parameter_issue\", \"regex\": \"EC\"}}, \"then\": \"$data.ec_target\"}, {\"case\": {\"$regexMatch\": {\"input\": \"$metadata.parameter_issue\", \"regex\": \"Température\"}}, \"then\": \"$data.ref_temp_opt\"}, {\"case\": {\"$regexMatch\": {\"input\": \"$metadata.parameter_issue\", \"regex\": \"Humidité\"}}, \"then\": \"$data.ref_humidity_opt\"}], \"default\": 0}}]}}}, \"Sévérité\": \"$severity\"}}]"
