      "type": "stat",
      "title": "Type Principal",
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 7 },
      "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "infinity-alerts-uid" },
      "targets": [{
        "refId": "A",
        "type": "json",
        "source": "url",
