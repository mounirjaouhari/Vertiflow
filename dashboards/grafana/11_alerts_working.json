      "type": "row",
      "title": "Alertes Actives",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 12 },
      "collapsed": false
    },
    {
      "type": "table",
      "title": "Alertes Actives (Dernières 50)",
      "description": "Alertes non résolues nécessitant attention",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 13 },
      "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "infinity-alerts-uid" },
      "targets": [{
        "refId": "A",
        "type": "json",
        "source": "url",
        "url": "/api/alerts/active?limit=50",
        "format": "table",
        "parser": "backend",
        "root_selector": "$.data[*]"
      }],
      "fieldConfig": {
        "defaults": {
          "custom": { "align": "auto", "filterable": true }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "severity" },
            "properties": [
              { "id": "custom.width", "value": 100 },
              { "id": "mappings", "value": [
                { "type": "value", "options": { "CRITICAL": { "color": "dark-red", "text": "CRITICAL" }}},
                { "type": "value", "options": { "HIGH": { "color": "red", "text": "HIGH" }}},
                { "type": "value", "options": { "MEDIUM": { "color": "orange", "text": "MEDIUM" }}},
                { "type": "value", "options": { "LOW": { "color": "yellow", "text": "LOW" }}}
              ]}
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm"
      }
    },
    {
      "type": "row",
      "title": "Historique",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "collapsed": false
    },
    {
      "type": "table",
      "title": "Journal Complet (Dernières 100)",
      "description": "Historique de toutes les alertes",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 24 },
      "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "infinity-alerts-uid" },
      "targets": [{
        "refId": "A",
        "type": "json",
        "source": "url",
        "url": "/api/alerts/all?limit=100",
        "format": "table",
        "parser": "backend",
        "root_selector": "$.data[*]"
      }],
      "fieldConfig": {
        "defaults": {
          "custom": { "align": "auto", "filterable": true }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "resolved" },
            "properties": [
              { "id": "mappings", "value": [
                { "type": "value", "options": { "true": { "color": "green", "text": "✓ Résolu" }}},
                { "type": "value", "options": { "false": { "color": "red", "text": "✗ Actif" }}}
              ]}
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm"
      }
    }
